---
import Home from '../components/pages/Home.astro';
import LatestNews from '../components/pages/LatestNews.astro';
import SponsorCarousel from '../components/pages/SponsorCarousel.astro';
import NavBar from '../components/utils/NavBar/NavBar.astro';
import Layout from '../layouts/Layout.astro';

const sections = [
  {
    id: 'latest-news',
    Component: LatestNews,
  },
];
---

<Layout>
  <NavBar />
  <div class="w-full min-h-screen">
    <Home />
    
    <div id="sponsorships" class="bg-white py-20 border-b border-[#3776AB]/10">
      <div class="container mx-auto px-4 text-center mb-12">
          <h3 class="text-xl md:text-2xl font-light text-[#3776AB]">
            Proudly Sponsored By
      </div>
      <SponsorCarousel />
    </div>

    {
       sections.map(({ id, Component }, index) => (
          <section
            id={id}
            class="py-20 md:py-28 bg-white border-b border-[#3776AB]/10 last:border-0"
          >
            <Component />
          </section>
        ))
    }
  </div>
</Layout>